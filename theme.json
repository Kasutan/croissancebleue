		"custom": {
			"typography": {
				"font-size": {
					"small": "clamp(1.2rem,1.8vw,1.8rem)",
					"medium":  "clamp(1.5rem,2vw,2rem)",
					"large":  "clamp(1.8rem,2.6vw,2.6rem)",
					"huge":  "clamp(2.2rem,3.2vw,3.2rem)",
					"gigantic": "clamp(2.6rem,4vw,4.6rem)",
					"colossal": "clamp(2.6rem,5vw,7rem)"
				},
				"line-height": {
					"tiny": "1.15",
					"small": "1.2",
					"medium": "1.3",
					"normal": "1.4"
				}
			}
		},
		"spacing": {
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"dropCap": false,
			"fontFamilies": [
				{
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
					"name": "System Font",
					"slug": "system-font"
				}
			],
			"fontSizes": [
				{
					"size": "var(--wp--custom--typography--font-size--small)",
					"slug": "small"
				},
				{
					"size": "var(--wp--custom--typography--font-size--medium)",
					"slug": "medium"
				},
				{
					"size": "var(--wp--custom--typography--font-size--large)",
					"slug": "large"
				},
				{
					"size": "var(--wp--custom--typography--font-size--huge)",
					"slug": "x-large"
				}
			]
		},
		"layout": {
			"smallSize": "840px",			
			"contentSize": "1200px",
			"wideSize": "1440px",			
			"fullSize": "1920px"

		}
	},
	"styles": {
		"color": {
			"background": "#ffffff",
			"text": "var(--wp--preset--color--bleu-9f)"
		},
		"elements": {
			"button": {
				"border": {
					"radius": "1px"
				},
				"color": {
					"background": "transparent",
					"text": "var(--wp--preset--color--bleu-9a)"
				}
			}
			
		},
		"spacing": {
			"blockGap": "1.5rem"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)",
			"lineHeight": "var(--wp--custom--typography--line-height--normal)",
			"fontSize": "var(--wp--preset--font-size--small)"
		}
	},
